<Window x:Class="LoginPass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPass"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="Resources/i.jpg" Height="100" Width="100" Margin="164,48,176,48"/>
        <TextBlock TextWrapping="Wrap" Text="&#x9;        LOGIN PLS" Margin="0,154,48,82" Grid.RowSpan="2" FontFamily="Arial Black" FontSize="22"/>
        <TextBox TextWrapping="Wrap" Text="Login" Margin="10,66,22,67" Grid.Row="1" TextChanged="TextBox_TextChanged" FontFamily="Candara Light" FontSize="20"/>
        <TextBox TextWrapping="Wrap" Text="Password" Margin="10,30,22,114" Grid.Row="2" FontFamily="Candara Light" FontSize="20"/>
        <Button Content="JOIN" Margin="39,53,39,52" Grid.Row="3" FontSize="48" FontFamily="Candara Light" Background="#FFDC8A8A" Click="Button_Click"/>
    </Grid>
</Window>
