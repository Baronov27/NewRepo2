<Window x:Class="forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forms"
        mc:Ignorable="d"
        Title="Log in" Height="500" Width="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF150544"/>
                <GradientStop Color="#FF44BBF3" Offset="0.823"/>
                <GradientStop Color="#FF1F2E6C" Offset="0.23"/>
                <GradientStop Color="#FF63E8E5" Offset="0.977"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*" ></ColumnDefinition>
            <ColumnDefinition Width="228*" ></ColumnDefinition>
            <ColumnDefinition Width="35*" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"></RowDefinition>
            <RowDefinition Height="105*"></RowDefinition>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="30*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btnOpen" Content="Авторизоваться" Click="ButtonNewWindow_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="41" Width="158"  FontSize="18" Grid.Row="4" Grid.Column="1" Background="#FF2C619D" FontFamily="Bahnschrift SemiLight" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="18" Height="21" Grid.Row="2" Grid.Column="1" FontFamily="Bahnschrift SemiLight" Foreground="White"><Run Language="ru-ru" Text="Введите логин:"/></TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="18" Height="21" Grid.Row="3" Grid.Column="1" Foreground="White"><Run Text="Введите "/><Run Language="ru-ru" Text="пароль"/><Run Text=":"/></TextBlock>
        <Image HorizontalAlignment="Left" Height="80" Margin="25,10,0,0" VerticalAlignment="Top" Width="169" Grid.Column="1" Source="/p1_3766626_01f25578.jpg" Stretch="Fill" Grid.Row="1"/>
        <TextBox x:Name="tbxLogin" Grid.Column="1" HorizontalAlignment="Center" Margin="0,56,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" Height="26"/>
        <TextBox x:Name="tbxPassword" Grid.Column="1" HorizontalAlignment="Center" Margin="0,52,0,0" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Top" Width="208" FontSize="16" Height="27"/>
    </Grid>
</Window>
