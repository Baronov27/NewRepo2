<Window x:Class="ShopProductManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ShopProductManagerApp"
        mc:Ignorable="d"
        Title="Управление товарами" 
        Height="450" 
        Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>

        <!-- Пользователь -->
        <TextBlock x:Name="Username" Text="Пользователь: Admin" Grid.Row="0" Grid.Column="1" Margin="10 0 0 0"
                   HorizontalAlignment="Left" FontSize="12" FontWeight="SemiBold" VerticalAlignment="Center"/>

        <!-- Кнопка выхода -->
        <Button x:Name="Exit" Grid.Row="0" Grid.Column="3" Margin="5" Content="Выход" 
                Click="Exit_Click" FontSize="14" Background="LightCoral" Foreground="White"/>
        <TextBox x:Name="NameTextBox" materialDesign:HintAssist.Hint="Название товара" BorderThickness="1" 
                 Grid.Row="1" Grid.Column="0" Margin="5" FontSize="14"/>

        <!-- Поле для ввода описания товара -->
        <TextBox x:Name="DescriptionTextBox" materialDesign:HintAssist.Hint="Описание товара" BorderThickness="1" 
                 Grid.Row="1" Grid.Column="1" Margin="5" FontSize="14"/>

        <!-- Поле для ввода цены товара -->
        <TextBox x:Name="PriceTextBox" materialDesign:HintAssist.Hint="Цена товара" BorderThickness="1" 
                 Grid.Row="1" Grid.Column="2" Margin="5" FontSize="14"/>

        <!-- Кнопка добавления товара -->
        <Button x:Name="AddProductButton" Grid.Row="1" Grid.Column="3" Margin="5" Content="Добавить товар" 
                Click="AddProductButton_Click" FontSize="14" Background="LightGreen" Foreground="Black"/>

        <!-- Список товаров -->
        <DataGrid x:Name="ProductList" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,0,5,0" 
                  BorderThickness="1" AutoGenerateColumns="False" FontSize="14" SelectionChanged="ProductList_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название товара" Width="*" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Header="Описание" Width="200" Binding="{Binding Description}"/>
                <DataGridTextColumn Header="Цена" Width="150" Binding="{Binding Price}"/>
                <DataGridTemplateColumn Header="Действия" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Удалить" Foreground="White" 
                                    Padding="5" Margin="2"
                                    Click="DeleteProductButton_Click"
                                    Background="Red"
                                    Tag="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>