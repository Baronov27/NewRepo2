<Window x:Class="Баронов.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Баронов"
        mc:Ignorable="d"
        Title="MainWindow" Height="634" Width="730">
    <Grid  RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.066"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82*">

            </ColumnDefinition>
            <ColumnDefinition Width="174*">

            </ColumnDefinition>
            <ColumnDefinition Width="109*">

            </ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="245*"/>
            <RowDefinition Height="62*"/>
            <RowDefinition Height="118*"/>
            <RowDefinition Height="62*">

            </RowDefinition>
            <RowDefinition Height="118*">

            </RowDefinition>
            <RowDefinition Height="150*">

            </RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="Логин" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="29" Width="66"/>

        <TextBox  x:Name="tbxlogin" Grid.Column="1" Grid.Row="2" Margin="10,34,10,34" FontSize="16" FontWeight="Bold" TextChanged="tbxlogin_TextChanged"/>

        <TextBlock Grid.Column="1" Grid.Row="3" Text="Пароль" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="82"/>

        <TextBox x:Name="tbxPass" Grid.Column="1" Grid.Row="4" Margin="10,32,10,32" FontWeight="Bold" FontSize="16"/>

        <Button x:Name="btnOpen" Grid.Column="1" Grid.Row="5" Content="Вход" FontWeight="Bold" FontSize="24" Margin="10,41,10,40" Background="White" BorderThickness="2,2,2,2" Click="btnOpen_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="BorderBrush" Value="Blue"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="BlueViolet"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Image HorizontalAlignment="Left" Height="188" Margin="28,18,0,0" VerticalAlignment="Top" Width="296" Grid.Column="1" Grid.RowSpan="2"/>
        <Image Margin="60,4,43,22" Source="/Image2.png" Stretch="Fill" Grid.Column="1"/>
    </Grid>
</Window>